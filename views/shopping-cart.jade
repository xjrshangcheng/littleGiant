doctype html
html(lang="en")
    head
        title= "category"
        link(rel="stylesheet" href="./stylesheets/layoutStyle.css")
        link(rel="stylesheet" href="./bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="./stylesheets/shoppingCart.css")
    body
        include header.html
        .container
            .cart-shop
                .cart-shops-name
                    | 商家:
                .cart-goods-box
                    .cart-a
                        .cart-title-box
                            ul.cart-title
                                li.cart-all
                                    input( type="checkbox" class="my_all_check" name="all-check" id="add_goods_tobuy_24124")
                                    | 全选
                                li.cart-goods 商品名称
                                li.cart-rmb 价格
                                li.cart-number 数量
                                li.cart-total 小计
                                li.cart-operate
                                    ul.cart-title_leftbg
                                        li.cart-title-left-bg2 操作

                    .shopping-cart_goods
                        if data.length === 0
                            ="购物车现在没有商品"
                        for shoppingCartGoods in data
                            ul.cart-content.cart_goods
                                li.cart-content-table1
                                    input(data-id="#{shoppingCartGoods.id}" type="checkbox" class="add-goods-tobuy-choose-0" name="add_goods_tobuy_choose_0" id="add_goods_tobuy_24124")
                                li.cart-content-table1
                                    a(href="/product-details")
                                    img.img-cursor(src="./images/goods-detail-picture/ym2.jpg")
                                li.cart-content-table3
                                    = shoppingCartGoods.name
                                li.cart-content-table4
                                    input(data-id="#{shoppingCartGoods.id}" class="price" type="text" name="price" value=shoppingCartGoods.price readonly)
                                li.cart-content-table5
                                    input(data-id="#{shoppingCartGoods.id}" class="changes" type="button" name="add" value="-")
                                    input(data-id="#{shoppingCartGoods.id}" class="cart-goods-count" name="number" type="text" value=shoppingCartGoods.number)
                                    input(data-id="#{shoppingCartGoods.id}" class="changes" type="button" name="reduction" value="+")
                                li.cart-content-table6
                                    input(data-id="#{shoppingCartGoods.id}" class="subtotal" type="text" value=shoppingCartGoods.price * shoppingCartGoods.number readonly)
                                li.cart-content-table7
                                    a(class = "cart_goods_delete" id = shoppingCartGoods.id)  删除
                .cart-total-box
                    ul.cart-content-footer
                        li.footer-center
                            ul.my-total
                                span.amount-title
                                em.amount-title
                                    input.total
            .footer-button
                a(class="continue-cart" href="/") 继续购物
                a(class="buy-now" href="/pay") 去结算
        include footer.html
        script(src="./javascripts/shopping-cart.js")
        script(src="./jquery/dist/jquery.js")
