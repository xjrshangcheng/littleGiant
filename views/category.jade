doctype html
html(lang="en")
    head
        title= "category"
        link(rel="stylesheet" href="./stylesheets/layoutStyle.css")
        link(rel="stylesheet" href="./bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="./stylesheets/category.css")
        script(src="./jquery/dist/jquery.js")
    body
        include header.html
        .container.title-margin
            .panel.panel-danger
                .panel-heading
                    for category in breadArray
                        a(href="/category?type="+category).text-cursor #{category}
                        span.glyphicon.glyphicon-chevron-right.char-style
                .panel-body
                    for sub in subCategory
                        a(href="/category?type="+sub).col-md-1.category.text-center.text-cursor #{sub}
                        
                    .col-md-3.pull-right#top-page-turning
                        .btn.btn-danger.col-md-4.text-center#top-previous-page.active
                            span.glyphicon.glyphicon-chevron-left
                        .col-md-4.text-center.page-detail 
                            span#now-page #{nowPage}
                            span / 
                            span#sum-page #{sumPage}
                        .btn.btn-danger.col-md-4.text-center#top-next-page.active
                            span.glyphicon.glyphicon-chevron-right.char-style
            .panel.panel-danger
                .panel-body#body.text-center
                    if data.length !== 0
                        for goodsInfo in data
                            .col-md-3.info-margin-bottom
                                .clearfix
                                    a(href="/goods?id="+ goodsInfo.id)
                                        img.col-md-12.text-center.img-cursor(src=goodsInfo.img height="224px;")
                                .col-md-12
                                    .pull-left.col-md-6.text-center.border $#{goodsInfo.price}
                                    .pull-right.col-md-6.text-center.border 销量：#{goodsInfo.sales}
                                    a(href="/goods?id="+ goodsInfo.id)
                                        .col-md-12.border.info-div.text-cursor #{goodsInfo.info}
                    else 
                        |此类无商品
                .panel-heading.text-center#bottom-page-turning
                    a.btn.btn-defaults.color-font#bottom-previous-page.active 上一页
                    span#numberPageDown
                    a.btn.btn-defaults.color-font#bottom-next-page.active 下一页
                    | 共有#{sumPage}页
        include footer.html
        script(src="./javascripts/category.js")
