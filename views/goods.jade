extends ./layout.jade
block styles
    link(rel="stylesheet" href="/stylesheets/search.css")
    link(rel="stylesheet" href="/stylesheets/layoutStyle.css")
    link(rel="stylesheet" href="/lib/bootstrap/bootstrap.css")
    link(rel="stylesheet" href="/stylesheets/product.css")

block content
    include search.html
    .container
        .buy-content
            .buy-content-imgbox
                .product-imgbox
                    .product-bigimg-box
                        if imgDate.length === 0
                            img(src="/images/goods/yang.jpg" class="big-picture")
                        else
                            img(src="#{imgDate[0]}" class="big-picture")
                    ul.product-small-img
                        - for (var x = 0; x < imgDate.length; x++)
                            li.list
                                a
                                    img(src="#{imgDate[x]}" class="picture")
            .buy-content-text
                .buy-content-text-a
                    - var foo = goodsData[0].name
                    h1.buy-content-text-a1= foo
                    - var foo = goodsData[0].info
                    em.buy-content-text-a2= foo
                .buy-content-box
                    ul.buy-content-text-b
                        li.buy-content-state
                            -var foo = "商品编码："
                            em= foo
                            .buy-content-box
                                - var foo = goodsData[0].id
                                em.buy-content-state-b#goods-code= foo
                        li.buy-content-state1
                            - var foo = "价    格："
                            em.buy-content-state-a= foo
                            .buy-content-price
                                -var foo = goodsData[0].price
                                em.buy-content-state-b#sales-price= foo
                                em   元
                        li.buy-content-state1
                        if goodsData[0].standard_one !== "" || goodsData[0].standard_two !== ""
                            - var foo = "规   格："
                            em.buy-content-state-a= foo
                            .buy-contene-box
                                if goodsData[0].standard_one !== ""
                                    label.select-item
                                        - var foo = "     " + goodsData[0].standard_one
                                        input(type='radio', name='approve',value="#{goodsData[0].standard_one}",checked)
                                        = foo
                                    |&nbsp;&nbsp;&nbsp;
                                if goodsData[0].standard_two !== ""
                                    label.select-item
                                        - var foo = "     " + goodsData[0].standard_two
                                        input(type='radio', name='approve',value="#{goodsData[0].standard_two}")
                                        = foo
                ul.buy-content-text-c
                    li.buy_content_state#buy-goods-num-box
                        - var foo = "数    量："
                        em.buy-content-state-a= foo
                        em
                            ul.quantity-purchased
                                li.quantity
                                    button#goods_number_minus -
                                    input(type="text",id="goods-number-input",name="goods-number-input",value="1")
                                    button#goods_number_plus +
                .buy_content_arrow
                    .jiathis_style
                        a.jiathis_button_qzone
                        a.jiathis_button_tsina
                        a.jiathis_button_tqq
                        a.jiathis_button_weixin
                        a.jiathis_button_renren
                        a.jiathis_counter_style
                ul.buy_content_button
                    li
                        div(class="button_join_cart patt_bg_join_cart" id="add_to_cart" title="~~~亲" data-toggle="popover" data-placement="right" data-content="添加购物车成功")|添加购物车
        br
        br
        .container
                .left
                    #shopping-board
                        .titleOne
                            h5 商城公告
                        .board-ontent
                            ul
                                li.content-list  庆祝新店开张，满199减50
                                li.content-list  江浙沪地区包邮
                                li.content-list  小巨人商城祝您购物愉快。
                .right
                    .text
                        ul.nav.nav-tabs
                            li(role="presentation",class="active")
                                a(href="#")  商品详情
                    .jumbotron
                        |!{goodsData[0].detail}
    script(src="/javascripts/cookie.js")
    script(src="/jquery/dist/jquery.js")
    script(src="/bootstrap/dist/js/bootstrap.js")
    script(src="/javascripts/add.js")
